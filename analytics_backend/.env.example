# Aadhaar Pulse - Environment Configuration

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Database (Optional - for persistent storage)
DATABASE_URL=sqlite:///./aadhaar_pulse.db

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0

# LLM Configuration
# LLM Provider Selection: "openai", "anthropic", or "huggingface"
LLM_PROVIDER=huggingface

# Hugging Face (Free tier available)
HF_TOKEN=your_huggingface_token_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-8B-Instruct

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Alternative)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=csv,json,xlsx,xls

# Analysis Configuration
CORRELATION_THRESHOLD=0.7
VOLATILITY_HIGH_THRESHOLD=0.5
VOLATILITY_LOW_THRESHOLD=0.15
ZSCORE_ANOMALY_THRESHOLD=2.0
PVALUE_SIGNIFICANCE=0.05

# Differential Privacy
DIFFERENTIAL_PRIVACY_EPSILON=1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aadhaar_pulse.log
